%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: { class: "form-horizontal" } do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              = link_to "Add a New Video", new_admin_video_path
          %br
          %fieldset
            = f.text_field :title, label_class: "col-sm-3", input_group_class: "col-sm-3"
            = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]}), label_class: "control-label col-sm-3", input_group_class: "col-sm-4"
            = f.text_area :description, label_class: "col-sm-3", rows: "8", input_group_class: "col-sm-8"
            = f.file_field :large_cover, class: "btn", label_class: "col-sm-3", input_group_class: "col-sm-3"
            = f.file_field :small_cover, class: "btn", label_class: "col-sm-3", input_group_class: "col-sm-3"
            = f.text_field :video_url, label_class: "col-sm-3", input_group_class: "col-sm-3", label: "Video URL"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
