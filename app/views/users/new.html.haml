%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address", label_class: "col-sm-2", input_group_class: "col-sm-6" 
          = f.password_field :password, label_class: "col-sm-2", input_group_class: "col-sm-6" 
          = f.text_field :full_name, label: "Full Name", label_class: "col-sm-2", input_group_class: "col-sm-6" 
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Sign Up" class="btn btn-default")
